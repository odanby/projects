/*
    I want to create a user and password, where if you don't enter in the right thing, it'll keep looping that you
    need to enter it in right.

    I should use a do...while loop!

    i want the username to be: puffdaddy92 and password to be: Joemama2008
*/
const prompt = require('prompt-sync')();

// user = joemama2008
// pass = Password123

let running = true;
    while(running){
        let userName = prompt("Please enter your username. ");
        let password = prompt("And your password? ");
        if(userName === "joemama2008" && password === "Password123"){
            console.log("Welcome, " + userName + "! You are now entering Webkinz.com...");
        } else if(userName !== "joemama2008"){
            console.log("Incorrect username.");
        } else {
            console.log("Incorrect password.");
        }
        let correct = prompt("Want to try logging in again? y/n: ");
        if(correct !== "y"){
            running = false;
        }
    }
console.log("You have returned to the homepage. Or have you? MWHAHA.");
